<%- livre_title = current_user.role == "superadmin" ? "Tous les livres" : "Mes livres" %>

<nav class="navigation" role="navigation">

  <div><span class="current-user"><%= current_user.email %></span></div>
  <div><%= link_to 'Se déconnecter', sign_out_path,  method: :delete %></div>

  <br>
  <br>

  <%= link_to(
      "#{livre_title}",
      admin_livres_path,
      class: "navigation__link navigation__link--active")
  %>
  <%= link_to(
      "Retour à l'accueil",
      root_path,
      class: "navigation__link navigation__link--inactive")
  %>
  <% if current_user.role === "superadmin" %>
    <%= link_to(
        "Utilisateurs",
        admin_users_path,
        class: "navigation__link navigation__link--inactive")
    %>    
  <% end %>

  <br>
  <br>
  <div><%= link_to 'Supprimer mon compte', admin_user_path(current_user.id), data: { confirm: 'Êtes-vous sûr ? Votre compte et tous les livres associés seront supprimés définitivement' }, method: :delete, confirm: 'Êtes-vous sûr ?'  %></div>


</nav>
