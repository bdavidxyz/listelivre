<%- livres = local_assigns[:livres] %>
<%= link_to "Ajouter vos livres", admin_root_path %>

<br>
<div>&nbsp;</div>
<h1>Bibliothèque sélidaire</h1>


<table>
  <caption></caption>
  <thead>
    <tr>
      <th align="left">Titre</th>
      <th align="left">Auteur</th>
      <th align="left">Séliste</th>
      <th align="left">Genre</th>
    </tr>
  </thead>
  <tbody>
    <% livres.each do |livre| %>
      <tr>
        <td align="left"><%= livre[:titre] %></td>
        <td align="left"><%= livre[:auteur] %></td>
        <td align="left"><%= livre[:proprietaire] %></td>
        <td align="left"><%= livre[:genre] %></td>
      </tr>        
    <% end %>
  </tbody>
</table>
